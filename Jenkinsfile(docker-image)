pipeline {
    agent any

    environment {
        MAVEN_TOOL  = 'maven3.9.12'

        DOCKER_IMAGE = 'code9bruno/linkpay'
        DOCKER_TAG   = "${BUILD_NUMBER}"

        TEST_CONTAINER = 'linkpay-test'
        PROD_CONTAINER = 'linkpay-prod'
    }

    stages {

        stage('1. Git Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/code9Bruno/pipeline1.git'
            }
        }

        stage('2. Maven Build') {
            steps {
                withMaven(maven: "${MAVEN_TOOL}") {
                    sh 'mvn clean package -Dmaven.test.skip=true'
                }
            }
        }

        stage('3. Build Docker Image') {
            steps {
                echo 'üê≥ Building Docker image...'
                sh '''
                docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} .
                '''
            }
        }

        stage('4. Push Docker Image to DockerHub') {
            steps {
                echo 'üì§ Pushing Docker image to Docker Hub...'
                withCredentials([
                    usernamePassword(
                        credentialsId: 'dockerhub-cred',
                        usernameVariable: 'DOCKER_USER',
                        passwordVariable: 'DOCKER_PASS'
                    )
                ]) {
                    sh '''
                    docker login -u $DOCKER_USER -p $DOCKER_PASS
                    docker push ${DOCKER_IMAGE}:${DOCKER_TAG}
                    '''
                }
            }
        }

        stage('5. Deploy to TEST (Docker)') {
            steps {
                echo 'üöÄ Deploying Docker image to TEST...'
                sh '''
                docker rm -f ${TEST_CONTAINER} || true
                docker run -d \
                  --name ${TEST_CONTAINER} \
                  -p 8081:8080 \
                  ${DOCKER_IMAGE}:${DOCKER_TAG}
                '''
            }
        }

        stage('6. Manual Approval') {
            steps {
                timeout(time: 10, unit: 'MINUTES') {
                    input message: '‚úÖ Approve deployment to PRODUCTION?'
                }
            }
        }

        stage('7. Deploy to PRODUCTION (Docker)') {
            steps {
                echo 'üöÄ Deploying Docker image to PRODUCTION...'
                sh '''
                docker rm -f ${PROD_CONTAINER} || true
                docker run -d \
                  --name ${PROD_CONTAINER} \
                  -p 8082:8080 \
                  ${DOCKER_IMAGE}:${DOCKER_TAG}
                '''
            }
        }
    }

    post {
        success {
            slackSend(
                channel: '#ci-cd',
                color: 'good',
                message: "‚úÖ *SUCCESS*: LinkPay deployed successfully.\nImage: ${DOCKER_IMAGE}:${DOCKER_TAG}"
            )
        }

        failure {
            slackSend(
                channel: '#ci-cd',
                color: 'danger',
                message: '‚ùå *FAILED*: LinkPay pipeline failed. Check Jenkins logs.'
            )
        }

        aborted {
            slackSend(
                channel: '#ci-cd',
                color: 'warning',
                message: '‚ö†Ô∏è *ABORTED*: Deployment was stopped manually.'
            )
        }
    }
}
